<%- include('includes/head'); %>

<section class="container">
  <div class="row">
   <div class="col-lg-2"></div>
   <div class="col-lg-8 my-4">
     <h1 class="text-center my-3">Agenda</h1>
   
     <%- include('includes/messages'); %>
     
       <div class="responsive-table">

        <% if(contatos.length > 0 ) { %>
         <table class="table my-3">
          <% contatos.forEach( contato => { %>
            <tr>
            <td> <%= contato.nome %></td>
             <td><%= contato.email %> </td>
             <td><%= contato.telefone %></td>
             <td><a href="/contato/index/<%= contato._id %>">Editar</a> </td>
             <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a> </td>
          
           </tr>

        <%  })  %>
                     
         </table>

         <% }  else { %>
          <p class="text-center lead"> Nâo há contatos</p>
          <a class="button nav-link text-center" href="/contato">Crie um novo contato</a>
          <% } %>
       </div>
     </div>
   </div>
   <div class="col-lg-2"></div>
  </div>
  
   
 </section>


<%-  include('includes/foot'); %>
