<%- include('includes/head'); %>

<section class="container">
  <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 my-4">
          <h1 class="text-center my-3">Login</h1>
          <%- include('includes/messages'); %>
          <p class="text-center lead">Faça seu login </p>

          <div class="row">
              <div class="form-group col-lg ">
                  <h4>Faça seu login</h4>
                  <form class="form-login" action="/login/login" method="POST">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <div class="row mb-3">
                        email
                          <input type="email" class="form-control" name="email" >


                       <p class="alert alert-email"></p>
                      </div>
                      <div class="row mb-3">
                        password
                          <input type="password" class="form-control" name="password" >
                          <p class="alert alert-password"></p>
                      </div>
                      <button type="submit" class="btn btn-primary">Entrar</button>
                    </form>

              </div>
              <div class="col-lg-1 "></div>
              <div class="form-group col-lg">
                  <h4>Cadastrar uma conta</h4>

                  <form class="form-cadastro" action="/login/register/" method="POST">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <div class="row mb-3">
                        email
                          <input type="email" class="form-control" name="email" >
                          <p class="alert alert-email"></p>
                      </div>
                      <div class="row mb-3">
                        senha
                          <input type="password" class="form-control" name="password" >
                          <p class="alert alert-password"></p>
                       
                      </div>
                      <button type="submit" class="btn btn-primary">Criar conta</button>
                    </form>

              </div>
          </div>
      </div>
  </div>
  <div class="col-lg-2"></div>
  </div>


</section>


<%-  include('includes/foot'); %>
